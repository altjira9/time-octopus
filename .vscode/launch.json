{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "electron",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "env": {"DEBUG": "true"},
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
        "windows": {
          "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
        },
        "args" : ["main.js"],
        "outputCapture": "std"
      }
    ]
  }